<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".DogumTarihiActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doğum tarihi"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:id="@+id/dogumyasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dogumtarihi_button"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/dogumtarihi_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Doğum Tarihini Değiştir"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/onayla_dogumtarihi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tickbox_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogumtarihi_sifre_layout"
        android:layout_marginTop="15dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dogumtarihi_sifre_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dogumtarihi_button"
        app:hintEnabled="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_lock"
        android:layout_marginTop="20dp"
        app:startIconTint="@color/colorBlack">
        <EditText
            android:inputType="textPassword"
            android:id="@+id/dogumtarihi_sifre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLength="15"
            android:background="@color/colorWhite"
            android:hint="Şifre"
            android:paddingStart="20dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>