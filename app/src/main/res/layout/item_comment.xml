<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/card_comment"
        android:layout_marginLeft="30dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/comment_profileimage"
            android:background="@color/colorWhite"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/card_comment"
        app:layout_constraintStart_toEndOf="@id/card_comment"
        android:text="İsim"
        android:textStyle="bold"
        android:id="@+id/comment_name"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/comment_name"
        android:text="saat"
        android:textStyle="italic"
        android:id="@+id/saat"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@id/comment_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/saat"
        android:text="30 beğenme "
        android:layout_marginLeft="10dp"
        android:id="@+id/comment_like"
        app:layout_constraintStart_toEndOf="@id/saat"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/saat"
        android:text="yanıtla"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/comment_like"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/comment_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:tint="@color/colorWhite"
        />




</androidx.constraintlayout.widget.ConstraintLayout>